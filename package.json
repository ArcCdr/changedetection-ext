{
  "name": "changedetection-browser-extension",
  "version": "1.0.0",
  "description": "Browser extension to monitor changedetection.io watches",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "build": "npm run lint && npm test",
    "dev:firefox": "web-ext run --source-dir=. --firefox-profile=test-profile",
    "dev:chrome": "echo 'Load unpacked extension in Chrome from this directory'",
    "package:firefox": "web-ext build --source-dir=. --artifacts-dir=dist",
    "package:chrome": "zip -r dist/chrome-extension.zip . -x '*.git*' 'node_modules/*' 'dist/*' '*.md' 'package*.json' '.eslintrc.js' 'jest.config.js' '__tests__/*'"
  },
  "keywords": [
    "browser-extension",
    "changedetection",
    "monitoring",
    "chrome",
    "firefox"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-chrome": "^0.8.0",
    "web-ext": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["jest-chrome"],
    "testMatch": ["**/__tests__/**/*.test.js"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "off"
    },
    "globals": {
      "chrome": "readonly"
    }
  }
}